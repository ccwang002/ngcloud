/* Sticky footer styles
-------------------------------------------------- */
html
body
    height: 100%
    background-image: url('../grey/grey.png')
    /* The html and body elements cannot have any padding or margin. */

#nav-stage
    margin: 20px 0;

.panel-download
    border-color: #D2322D

    .panel-heading
        border-color: @border-color
        background-color: @border-color
        color: white

.note
    -moz-border-radius: 15px
    border-radius: 15px
    padding: 10px 25px
    margin: 0 0 20px

.panel-body .tab-content .tab-pane
    margin: 0 20px

.closable-note
    width: 30%;
    @media (max-width: 767px)
        width: 100%;

.legend-desc
    margin-top: 150px
    @media (max-width: 767px)
        margin-top: 20px

/* Wrapper for page content to push down footer */
#wrap
    min-height: 100%
    height: auto !important
    height: 100%
    /* Negative indent footer by it's height */
    margin: 0 auto -60px

/* Set the fixed height of the footer here */
#push
#footer
    min-height: 60px
    margin-top: 30px

#footer
    background-color: #333;
    @media (max-width: 767px)
        /* Lastly, apply responsive CSS fixes as necessary */
        margin-left: -20px;
        margin-right: -20px;
        padding-left: 20px;
        padding-right: 20px;

    p
        margin-top: 20px;
        color: #CCC;
